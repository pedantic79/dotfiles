[user]
	name = Dan Nguyen
	email = pedantic@gmail.com
[include]
	path = ~/.gitconfig.local
[color]
	ui = auto
[merge]
	summary=true
	tool = bc3
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "bc3"]
	trustExitCode = true
[alias]
	tree = log --graph --decorate --oneline --all
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --branches --tags --remotes
	lf = log --graph --decorate --pretty=fuller --abbrev-commit --exclude='refs/notes/review' --exclude='refs/stash' --all --name-status
	lp = "!f() { git log --pretty=fuller --abbrev-commit -p ${1:-HEAD^..HEAD}; }; f"
	dlpr = "!f() { git fetch upstream +refs/pull/${1:-ERROR}/merge && git checkout FETCH_HEAD; }; f"
[rerere]
	enabled = false
[difftool]
	prompt = false
[core]
	autocrlf = input
[fetch]
	prune = true
